---
import { Image } from "@astrojs/image/components";
import Github from "../components/github.astro";
import Email from "../components/email.astro";
---

<html lang="en" class="bg-base-200 scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>SamMc</title>
    <meta name="title" content="SamMc" />
    <meta name="description" content="SamMc - Data Dev Design" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sammc.net" />
    <meta property="og:description" content="SamMc - Data Dev Design" />
    <meta property="twitter:title" content="SamMc" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://sammc.net" />
    <meta name="theme-color" content="#fb923c" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <div class="mx-0 sm:mx-auto max-w-2xl">
      <header
        class="navbar h-16 w-full justify-between p-4 my-4 rounded-lg bg-base-100"
      >
        <nav class="flex text-lg">
          <ul class="menu menu-horizontal">
            <li>
              <a class="font-mono font-medium rounded-lg" href="/">Home</a>
            </li>
            <li>
              <a class="font-mono font-medium rounded-lg" href="#languages"
                >Tools</a
              >
            </li>
            <li>
              <a class="font-mono font-medium rounded-lg" href="/projects"
                >Projects</a
              >
            </li>
          </ul>
        </nav>
      </header>
      <main>
        <section
          class="align-center flex w-full flex-col justify-center px-4 pb-4 sm:flex-row sm:p-8"
        >
          <div class="avatar">
            <div class="w-32 mask mask-squircle">
              <Image
                src="/memoji.jpg"
                alt="SamMc Memoji"
                format="webp"
                width={256}
                height={256}
              />
            </div>
          </div>
          <div class="flex flex-col sm:pl-8">
            <h1
              class="text-4xl font-bold font-mono bg-clip-text text-transparent bg-gradient-to-r from-sky-400 to-blue-700"
            >
              SamMc
            </h1>
            <p class="py-1 pr-2 font-mono sm:max-w-md sm:pr-0">
              I like exploring concepts in data, development, and design. Come
              with me on my quest to learn cool, new things!
            </p>
          </div>
        </section>
        <section id="tools" class="w-full px-4 pb-8 pt-2 sm:px-8 sm:pt-0">
          <h2 class="mb-4 text-2xl font-mono font-bold">Tools</h2>

          <div class="flex justify-center gap-4">
            <a
              href="https://developer.mozilla.org/en-US/docs/Web/HTML"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="HTML"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg"
                alt="HTML"
                width="55"
                height="55"
              />
            </a>
            <a
              href="https://developer.mozilla.org/en-US/docs/Web/CSS"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="CSS"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/css3/css3-original.svg"
                alt="CSS"
                width="55"
                height="55"
              />
            </a>
            <a
              href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="JavaScript"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg"
                alt="JavaScript"
                width="55"
                height="55"
              />
            </a>
            <a
              href="https://www.typescriptlang.org/"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="TypeScript"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg"
                alt="TypeScript"
                width="55"
                height="55"
              />
            </a>
            <a
              href="https://figma.com"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="Figma"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/figma/figma-original.svg"
                alt="Figma"
                width="55"
                height="55"
              />
            </a>

            <a
              href="https://jamstack.org/"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="Jamstack"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/jamstack/jamstack-original.svg"
                alt="Jamstack"
                width="55"
                height="55"
              />
            </a>
            <a
              href="https://astro.build/"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="Astro"
            >
              <img
                src="https://astro.build/assets/press/astro-icon-light.png"
                alt="Astro"
                width="50"
                height="50"
              />
            </a>
            <a
              href="https://tailwindcss.com/"
              class="transition-all ease-in-out hover:scale-[1.18]"
              aria-label="Tailwind CSS"
            >
              <img
                src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/tailwindcss/tailwindcss-plain.svg"
                alt="Tailwind CSS"
                width="55"
                height="55"
              />
            </a>
          </div>
        </section>
        <div></div>
        <section id="projects" class="w-full px-4 pb-8 pt-2 sm:px-8 sm:pt-0">
          <h2 class="mb-4 text-2xl font-mono font-bold">Projects</h2>
          <div class="grid gap-4">
            <div
              class="card rounded-box w-full bg-base-100 shadow-xl transition-all ease-in-out hover:scale-105 hover:brightness-105"
            >
              <a
                target="_blank"
                rel="noopener noreferrer"
                class="card-body"
                href="https://discord.com/api/oauth2/authorize?client_id=1077159995487035402&permissions=19456&scope=bot%20applications.commands"
                ><h2 class="flex justify-between">
                  <div class="card-title font-bold text-3xl">
                    <Image
                      src="/statistical.png"
                      alt="Statistical Logo"
                      format="webp"
                      width={80}
                      height={80}
                      class="w-[40px] h-[40px] rounded-full"
                    /> Project
                  </div>
                </h2>
                <p>Lorem ipsom dolor!</p>
                <div class="card-actions mt-2">
                  <span class="text-sm font-light">Tools</span>
                </div>
              </a>
            </div>
          </div>
        </section>
      </main>
      <footer
        class="items-center p-4 sm:flex sm:flex-row-reverse sm:justify-between sm:p-4 my-4 rounded-lg bg-base-100"
      >
        <div
          class="grid-flow-col gap-2 md:place-self-center md:justify-self-end pr-1"
        >
          <a
            target="_blank"
            rel="noopener noreferrer"
            title="Email"
            aria-label="Email"
            class="btn-ghost btn-circle btn"
            href="mailto:hello@sammc.net"
          >
            <Email />
          </a>
          <a
            target="_blank"
            rel="noopener noreferrer"
            title="Go to GitHub"
            aria-label="Go to GitHub"
            class="btn-ghost btn-circle btn"
            href="https://github.com/sa-mc"
          >
            <Github />
          </a>
        </div>
        <div class="items-center pl-4">
          &copy; SamMc {new Date().getFullYear()}. All rights reserved.
        </div>
      </footer>
    </div>
  </body>
</html>
